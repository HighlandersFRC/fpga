 * main.c
 *
 *  Created on: Mar 23, 2014
 *      Author: DGronlund
 */

#include <stdio.h>
#include <unistd.h>
#include <sys/time.h>

#include "gpio.h"

int data = 64;

#define NUM_LEDS 80

char oled_byte(char in) {
	return ((in & 8) << 3) | ((in & 4) << 2) | ((in & 2) << 1) | (in & 1);
}

void gpio_write_bit(int bit, char value) {
	if (value) {
		data &= ~ (1 << bit);
	} else {
		data |= (1 << bit);
	}
	gpio_write(data);
}

void vdd(char value) {
	if (value) {
		data |= 0x01;
	} else {
		data &= ~0x01;
	}
	gpio_write(data);
}

void vbat(char value) {
	if (value) {
		data &= ~0x02;
	} else {
		data |= 0x02;
	}
	gpio_write(data);
}

void reset(char value) {
	if (value) {
		data |= 0x04;
	} else {
		data &= ~0x04;
	}
	gpio_write(data);
}

void sclk(char value) {
	if (value) {
		data |= 0x08;
	} else {
		data &= ~0x08;
	}
	gpio_write(data);
}

void sdata(char value) {
	if (value) {
		data |= 0x10;
	} else {
		data &= ~0x10;
	}
	gpio_write(data);
}

void scmd(char value) {
	if (value) {
		data |= 0x20;
	} else {
		data &= ~0x20;
	}
	gpio_write(data);
}

// LED String Pins
// CHIP
// 1   - 2
// CLK - DATA

void led_write_1(char value) {
	if (value) {
		data |= 0x80;
	} else {
		data &= ~0x80;
	}
	gpio_write(data);
}

void led_write_2(char value) {
	if (value) {
		data |= 0x40;
	} else {
		data &= ~0x40;
	}
	gpio_write(data);
}

void spi_delay() {
	int i;
	for (i = 0; i < 0; i++) {
	}
}

void spi_delay_lights() {
	usleep(10000);
}

void spi_write(char data, char cmd) {
	scmd(cmd);
	sclk(0);
	int i;
	for (i = 7; i >= 0; i--) {
		sdata((data >> i) & 1);
		sclk(1);
		spi_delay();
		sclk(0);
	}
}

void led_spi_write(char data) {
	int i;
	for (i = 7; i >= 0; i--) {
		led_write_1(0);
		usleep(2);
		led_write_2((data >> i) & 1);
		usleep(2);
		led_write_1(1);
		usleep(4);
	}
}

long get_millis() {
	struct timeval time;
	gettimeofday(&time, NULL);
	return ((time.tv_sec) * 1000 + time.tv_usec/1000.0) + 0.5;
}

int main() {
	gpio_init();

	printf("Power Up Sequence Start\n");
	vdd(0);
	usleep(5000);
	reset(0);
	usleep(5000);
	reset(1);
	usleep(5000);
	vbat(0);
	printf("Power Up Sequence Done\n");

	spi_write(0xAE, 0); // Display Off
	spi_write(0x8D, 0); // Pump 1
	spi_write(0x14, 0);
	spi_write(0xD9, 0); // Precharge
	spi_write(0xF1, 0);
	spi_write(0x81, 0); // Contrast
	spi_write(0xFF, 0);
	spi_write(0xA4, 0); // Display from RAM
	spi_write(0xAF, 0); // Display On

	usleep(5000);

	spi_write(0x20, 0); // Vertical Addressing
	spi_write(0x01, 0);
	spi_write(0xFF, 1);

	int i;
	for (i = 0; i < 64 * 16; i++) {
		spi_write(oled_byte(0xff), 1);
	}

	long start;


	led_write_1(0);
	usleep(2000);
	for (i = 0; i < NUM_LEDS; i++) {
		led_spi_write(0x00);
		led_spi_write(0x00);
		led_spi_write(0x00);
	}

	start = get_millis();
	for (i = 0; i < NUM_LEDS / 2; i++) {
		led_spi_write(0xff);
		led_spi_write(0x00);
		led_spi_write(0x00);
	}
	printf("Duration: %d\n", get_millis() - start);
	printf("Delay\n");
	//sleep(5);
	led_write_1(0);
	printf("Clk Low\n");
	//sleep(5);
	printf("Ending\n");
	//return 0;

	usleep(2000);
	while (1) {
		for (i = 0; i < NUM_LEDS / 2; i++) {
			led_spi_write(0x00);
			led_spi_write(0xff);
			led_spi_write(0x00);
		}
		usleep(2000);
		for (i = 0; i < NUM_LEDS / 2; i++) {
			led_spi_write(0x00);
			led_spi_write(0x00);
			led_spi_write(0xff);
		}
		usleep(2000);
		for (i = 0; i < NUM_LEDS / 2; i++) {
			led_spi_write(0xff);
			led_spi_write(0xff);
			led_spi_write(0xff);
		}
		usleep(2000);
	}

	return 0;
}
